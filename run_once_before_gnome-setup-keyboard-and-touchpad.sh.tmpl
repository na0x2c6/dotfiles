#!/bin/bash

set -Eev

if [[ $(uname -s) != "Linux" ]] || [[ $XDG_CURRENT_DESKTOP != "GNOME" ]]  ; then
    exit 0
fi

mkdir -p ~/local/src
mkdir -p ~/.local/share/gnome-shell/extensions

source "{{ .chezmoi.config.sourceDir }}/_utils.sh"

sudo dnf -y install rust cargo ruby cmake scdoc
sudo usermod -aG input $USER

if [[ ! -e /etc/udev/rules.d/99-input.rules ]] ; then
    echo 'KERNEL=="uinput", GROUP="input", MODE="0660", TAG+="uaccess"' | sudo tee /etc/udev/rules.d/99-input.rules
    sudo udevadm trigger
    sudo udevadm control --reload-rules
fi

if [[ ! -e /etc/modules-load.d/uinput.conf ]] ; then
    echo 'uinput' | sudo tee /etc/modules-load.d/uinput.conf
    sudo systemctl restart systemd-modules-load.service
fi

# For Xremap
# https://github.com/k0kubun/xremap
if [[ ! -e ~/.cargo/bin/xremap ]] ; then
    git clone https://github.com/xremap/xremap.git ~/local/src/xremap
    cd $_
    cargo install xremap --features gnome
fi

__install_remote_gnome_extension "xremap@k0kubun.com"

# For 4 finger swipe
__install_remote_gnome_extension "swap-finger-gestures-3-4@icedman.github.com"

# For three-finger-drag
# https://github.com/lmr97/linux-3-finger-drag
if [[ ! -e ~/local/src/linux-3-finger-drag ]] ; then
    git clone https://github.com/lmr97/linux-3-finger-drag.git ~/local/src/linux-3-finger-drag
    cd $_
    cargo install --path .
fi
