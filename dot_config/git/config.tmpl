[user]
	name = {{ .gitname }}
	email = {{ .email }}
	signingkey = {{ .signingkey }}
[core]
	editor = vim
	quotepath = false
	abbrev = 12
	multiPackIndex = true
[merge]
	tool = vimdiff
	conflictstyle = zdiff3
	log = true
[mergetool]
	keepBackup = false
[pull]
	rebase = true
[init]
	defaultBranch = main
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[diff]
	algorithm = histogram
	colorMoved = dimmed-zebra
	colorMovedWS = allow-indentation-change
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[push]
	useForceIfIncludes = true
[commit]
	cleanup = scissors
